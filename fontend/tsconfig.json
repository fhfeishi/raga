// tsconfig.json

{
    // 项目根：fontend/tsconfig.json
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["DOM", "DOM.Iterable", "ES2022"],
      "module": "ESNext",
      "moduleResolution": "node",

      "strict": true,                  // 严格模式；新手可先关掉再逐步开启
      "esModuleInterop": true,         // 允许默认导入 CommonJS
      "skipLibCheck": true,            // 跳过依赖库的 .d.ts 检查，加快编译
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,

      "noEmit": true,                // 不落盘！把转译留给 Vite
      "isolatedModules": true,       // 让 esbuild/Vite 更稳
      "resolveJsonModule": true,

      /* React */
      "jsx": "react-jsx",              // React 17+ 新转译器
      "types": ["vite-plugin-svgr/client", "vite/client", "node"], // 加载 vite-plugin-svgr 内置类型（含 *.svg 声明）
      "baseUrl": ".",
      "paths": { "@/*": ["src/*"]  }
    },

    "include": ["src", "vite.config.ts"],                // src/ 下所有 ts/tsx
    "exclude": ["node_modules", "dist"]
  }
  